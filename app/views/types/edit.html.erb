<h1>Editing type</h1>

<% form_for(@type) do |f| %>
  <%= f.error_messages %>
  <p><%= label_tag 'name' %><br/>
    <%= f.text_field :name %></p>
    <%= image_tag(@type.image) %>
    <p><%= label_tag "Image name (put in public/images)" %><br/>
      <%= f.text_field :image %></p>
  <p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @type %> |
<%= link_to 'Back', types_path %>