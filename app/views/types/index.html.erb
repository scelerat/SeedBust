<h1>Species</h1>

<table>
  <tr>
  </tr>

<% @types.each do |type| %>
  <tr>
    <td><%= type.id %></td>
    <td><%= type.name %></td>
    <td><%= image_tag(type.image) if type.image %></td>
    <td><%= link_to 'Show', type %></td>
    <td><%= link_to 'Edit', edit_type_path(type) %></td>
    <td><%= link_to 'Destroy', type, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Species Type', new_type_path %>